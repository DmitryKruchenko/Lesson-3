def my_degree1(var1, var2):
    result1 = 1 / (var1 ** abs(var2))
    return result1

def my_degree2(var1, var2):
    result2 =1
    for i in range(1, (abs(var2) + 1)):
        result2 = result2 * 1 / var1
    return result2


x = int(input('Введите любое целое положительное число - основание: '))
y = int(input('Введите любое целое отрицательное число - степень: '))
print(my_degree1(x, y))
print(my_degree2(x, y))